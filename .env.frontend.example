# Frontend Environment Variables (.env.local)
# Copy to /frontend/.env.local and fill in actual values

# Backend API URL (local development)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Authentication Secret (MUST match backend!)
# Use the SAME secret you used in backend/.env
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars-random-string

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Optional: Frontend port (default is 3000)
PORT=3000